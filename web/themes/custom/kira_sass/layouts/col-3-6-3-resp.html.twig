{#
/**
 * @file
 * Kira_Sass implementation for a responsive 3-col layout
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <div{{ attributes.addClass('row') }}>

    <div{{ region_attributes.first.addClass('col-sm-3') }}>
      {{ content.first }}
    </div>

    <div{{ region_attributes.second.addClass('col-sm-6') }}>
      {{ content.second }}
    </div>

    <div{{ region_attributes.third.addClass('col-sm-3') }}>
      {{ content.third }}
    </div>

  </div>
{% endif %}
